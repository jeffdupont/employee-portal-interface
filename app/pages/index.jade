doctype html
head
  title Event Manager
  link(href="/favicon.ico", rel="shortcut icon", type="image/x-icon")
  link(rel="stylesheet",type="text/css",href="/#{ css }" media="all")

body(ng-app="app", ng-controller="MainController", ng-cloak)

  header.navbar.navbar-inverse.navbar-fixed-top(ng-controller="HeaderController", ng-if="session.isAuthenticated()")
    .container
      .navbar-header
        a.navbar-brand.brand(href="/")
          i.fa.fa-th-large
          |  Event<b>Manager</b> <small>v3.0</small>
      .collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            a.dropdown-toggle(href="", data-toggle="dropdown")
              | {{ session.currentUser.first_name + " " + session.currentUser.last_name + " " }}
              b.caret
            ul.dropdown-menu
              li(ng-show="session.currentUser.isAdmin()")
                a(href="/admin/users") User Admin
              li
                a(href="/profile") Profile
              li
                a(href="", ng-click="logout()") Sign Out

  .page-container
    //- BEGIN SIDEBAR
    nav(em-navigation, ng-if="session.isAuthenticated()")
    #page-content(ng-view)

  footer(ng-controller="FooterController", ng-if="session.isAuthenticated()")
    .row
      .col-sm-3
        p.help-feedback
          a.feedback
            i.fa.fa-comment
            |  Feedback
          a.help
            i.fa.fa-question-circle
            |  Help &amp; Support
      .col-sm-9
        .pull-right
          span.script-time(am-time-ago="script_start")

  script(src="/#{ jsVendor }", type="text/javascript")
  script(src="/#{ js }", type="text/javascript")

  script.
    //set minimum height of page
    var dh=($(document).height()-51);
    $("#page-content, nav").css("min-height",dh+"px");
